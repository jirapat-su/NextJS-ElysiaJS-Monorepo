{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  },
  "css": {
    "formatter": {
      "quoteStyle": "double"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!build",
      "!dist",
      "!coverage",
      "!public"
    ]
  },
  "formatter": {
    "attributePosition": "auto",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "useEditorconfig": true
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "es5"
    },
    "globals": ["React"]
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    },
    "linter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "turborepo": "recommended",
      "next": "recommended",
      "react": "recommended",
      "types": "recommended"
    },
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": false
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": {
            "maxAllowedComplexity": 15
          }
        },
        "noExcessiveNestedTestSuites": "error",
        "noForEach": "error",
        "noStaticOnlyClass": "error",
        "noVoid": "error",
        "useSimpleNumberKeys": "error",
        "useSimplifiedLogicExpression": "error"
      },
      "correctness": {
        "noConstantMathMinMaxClamp": "error",
        "noNodejsModules": "off",
        "useUniqueElementIds": "off",
        "noUnusedImports": {
          "fix": "safe",
          "level": "error"
        }
      },
      "style": {
        "noDefaultExport": "off",
        "noImplicitBoolean": "error",
        "noNegationElse": "error",
        "noNonNullAssertion": "warn",
        "noParameterAssign": "error",
        "noParameterProperties": "off",
        "noShoutyConstants": "warn",
        "useBlockStatements": "error",
        "useCollapsedElseIf": "error",
        "useConsistentArrayType": {
          "level": "error",
          "fix": "safe",
          "options": {
            "syntax": "shorthand"
          }
        },
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "strictCase": false,
            "requireAscii": true,
            "filenameCases": ["camelCase", "kebab-case", "PascalCase"]
          }
        },
        "useForOf": "warn",
        "useFragmentSyntax": "error",
        "useNamingConvention": "off"
      },
      "suspicious": {
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["warn", "error", "info"]
          }
        },
        "noUnknownAtRules": "off"
      },
      "nursery": {
        "recommended": false,
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {
            "attributes": ["className", "classList"],
            "functions": ["clsx", "cva", "tw", "cn"]
          }
        }
      },
      "performance": {
        "noBarrelFile": "warn",
        "noReExportAll": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/tests/**", "**/testing/**", "apps/api/prisma/seeds/**"],
      "linter": {
        "enabled": false
      }
    },
    {
      "includes": ["src/@types/**/*.d.ts", "**/*.d.ts"],
      "linter": {
        "rules": {
          "style": {
            "noNamespace": "off"
          }
        }
      }
    }
  ]
}
