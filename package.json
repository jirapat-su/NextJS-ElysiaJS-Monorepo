{
  "name": "app-monorepo",
  "private": true,
  "scripts": {
    "postinstall": "cd ./apps/api && bun run db:generate",
    "_____________app_scripts_____________": "",
    "build": "turbo run build",
    "build:standalone": "turbo run build:standalone",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "_____________deps_scripts_____________": "",
    "check-deps": "bunx taze -r",
    "upgrade-deps": "bunx taze -r --interactive",
    "clean-deps": "find . -name 'node_modules' -type d -prune -exec rm -rf {} + && find . -name '.turbo' -type d -prune -exec rm -rf {} + && find . -name '.next' -type d -prune -exec rm -rf {} + && rm -f bun.lock package-lock.json yarn.lock pnpm-lock.yaml"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.4",
    "turbo": "^2.8.3",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=24",
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
