{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "bun run db:generate",
    "_____________app_scripts_____________": "",
    "dev": "dotenvx run -f .env -- bun --watch src/index.ts",
    "build": "dotenvx run -f .env -- bun build src/index.ts --target=bun --outdir=dist",
    "start": "dotenvx run -f .env -- bun dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "__________prisma_app_scripts__________": "",
    "db:validate": "dotenvx run -f .env -- prisma validate",
    "db:generate": "dotenvx run -f .env -- prisma generate",
    "db:studio": "dotenvx run -f .env -- prisma studio",
    "___________dotenvx_scripts____________": "",
    "env:ec": "dotenvx encrypt -f .env && dotenvx encrypt -f .env.production",
    "env:dc": "dotenvx decrypt -f .env && dotenvx decrypt -f .env.production"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.1",
    "@prisma/client": "^6.2.1",
    "@t3-oss/env-core": "^0.13.8",
    "effect": "^3.15.0",
    "elysia": "^1.2.21",
    "zod": "^4.1.2"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.10.5",
    "bun-types": "^1.3.1",
    "prisma": "^6.2.1"
  }
}