{
  "name": "api",
  "type": "module",
  "version": "0.0.0",
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "tsdown src/index.ts -d build --dts",
    "build:standalone": "bun run build && bun build --compile --minify-whitespace --minify-syntax --outfile ./build/server ./build/index.mjs",
    "lint": "tsc --noEmit && biome check --write --no-errors-on-unmatched --files-ignore-unknown=true .",
    "format": "tsc --noEmit && biome format --write .",
    "_____________auth_scripts_____________": "",
    "auth:generate": "bunx @better-auth/cli generate --config ./src/libs/auth/index.ts",
    "__________prisma_app_scripts__________": "",
    "db:validate": "prisma validate",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --create-only",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/openapi": "^1.4.14",
    "@keyv/redis": "^5.1.6",
    "@prisma/adapter-mariadb": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@t3-oss/env-core": "^0.13.10",
    "better-auth": "^1.4.18",
    "date-fns": "^4.1.0",
    "effect": "^3.19.17",
    "elysia": "^1.4.25",
    "keyv": "^5.6.0",
    "mysql2": "^3.17.2",
    "pino": "^10.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.2.3",
    "bun-types": "^1.3.9",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.4.0",
    "tsdown": "^0.20.3"
  }
}
