{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenvx run -- bun --watch src/index.ts",
    "dev:production": "dotenvx run -f .env.production -- bun --watch src/index.ts",
    "build": "bun build src/index.ts --target=bun --outdir=dist",
    "start": "dotenvx run -- bun dist/index.js",
    "start:production": "dotenvx run -f .env.production -- bun dist/index.js",
    "lint": "biome check .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "db:generate": "dotenvx run -- prisma generate",
    "db:push": "dotenvx run -- prisma db push",
    "db:studio": "dotenvx run -- prisma studio",
    "env:encrypt": "dotenvx encrypt",
    "env:encrypt:production": "dotenvx encrypt -f .env.production",
    "env:decrypt": "dotenvx decrypt",
    "env:get": "dotenvx get",
    "env:set": "dotenvx set"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.1",
    "@prisma/client": "^6.2.1",
    "effect": "^3.15.0",
    "elysia": "^1.2.21",
    "zod": "^4.1.2"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.10.5",
    "bun-types": "^1.3.1",
    "prisma": "^6.2.1"
  }
}